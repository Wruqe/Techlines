<!-- Right-side card for creating new posts and displaying current posts -->
<div class="col-md-20">
  <div class="card">
    <div class="card-body">
      <!-- Create new post form -->
      <form class="new-blog-form">
        <h3>Create a New Post:</h3>
        <div class="form-group">
          <label for="blog-title">Title:</label>
          <textarea class="form-control" id="blog-title" name="blog-title" placeholder="What's on your mind?" style="width: 100%;"></textarea>
        </div>
        <div class="form-group">
          <label for="blog-content">Content:</label>
          <textarea class="form-control" id="blog-content" name="blog-content" style="width: 100%;"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
      {{#each blogs as |blog|}}
      {{> blog-details}}
      {{/each}}
    </div>
  </div>
</div>

<script src="/js/profile.js"></script>